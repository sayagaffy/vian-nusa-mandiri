{
  "name": "pt-vian-nusa-mandiri-website",
  "version": "1.0.0",
  "description": "Professional corporate website for PT Vian Nusa Mandiri - Construction & Building Services",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "test": "echo 'No tests specified'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out",
    "export": "next build",
    "sitemap": "next-sitemap",
    "optimize-images": "imagemin src/public/images/**/* --out-dir=src/public/images/optimized",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "performance": "npm run lighthouse && npm run analyze",
    "pre-deploy": "npm run type-check && npm run lint && npm run build",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "lucide-react": "^0.263.1",
    "next": "^14.0.0",
    "nodemailer": "^7.0.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "lighthouse": "^11.0.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.0.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "construction",
    "building-services",
    "jakarta",
    "kontraktor",
    "perawatan-gedung",
    "facility-management",
    "nextjs",
    "corporate-website"
  ],
  "author": "PT Vian Nusa Mandiri",
  "license": "UNLICENSED"
}
